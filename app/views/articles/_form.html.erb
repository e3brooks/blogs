<%# edit form and new form use same code so use partial %>
<%= form_with model: @article do |form| %>
    <div> 
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        <%# display any error messages for title %>
        <% @article.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end%>
    </div>

    <div> 
        <%= form.label :body %><br>
        <%= form.text_field :body %>
         <% @article.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
        <% end%>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>